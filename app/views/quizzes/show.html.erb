<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @quiz.subject %>
</p>

<p>
  <strong>Question:</strong>
  <%= @quiz.question %>
</p>
 
 <p>
  <strong>Image:</strong>
  <br>
  <%= image_tag @quiz.image, size: "200" %>
</p>

<h3> Risposte </h3>
<ol>
<% @quiz.answers.each do |answer| %>
<li> <%= answer.text %> 
	<% if answer.correct? %>
	(corretta)
	<% else %> (sbagliasti!)
	<% end %>
</li>
<%end %> 
	

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
